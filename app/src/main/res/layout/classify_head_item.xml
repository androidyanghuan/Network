<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:padding="@dimen/dp_5"
        android:background="@color/colorPageBg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/classify_head_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/all_str"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:drawableStartCompat="@drawable/ic_vector_head_vertical_line"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/classify_head_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_8"
            android:background="@drawable/classify_head_item_selector"
            android:clickable="true"
            android:onClick="onClick"
            android:drawablePadding="@dimen/dp_5"
            app:drawableStartCompat="@drawable/ic_vector_head_classify"
            android:focusable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_5"
            android:text="@string/selected_classify"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</layout>
